{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "lib": ["es2022", "DOM", "DOM.Iterable", "esnext"],
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true,
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["src/server/*"],
      "@frontend/*": ["src/client/*"]
    }
  },
  "include": [
    "src/**/*",
    "types/@unfuck-utf8-headers-middleware.d..ts",
    "cypress.config.js",
    "cypress/**/*",
    "vite.config.ts",
    "vite-env.d.ts"
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true,
    "compilerOptions": {
      "module": "esnext",
      "resolveJsonModule": false
    }
  }
}
